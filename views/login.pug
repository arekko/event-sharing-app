
extend base.pug
block content
  div.login-container
    div(class='form-container')
      h3.h3-title Login
      p.login-text Welcome back
      if message.length > 0
        p #{message}

      a(href="/auth/google" class="login-google-btn btn primary-color") 
        i(class="fab fa-google")
        span Sign In with Google
      p OR
      form(
        class="login-form"
          action="/api/v1/auth/login"
          id="login-form"
          method="POST"
          )

        input( type="text" name="username" placeholder="Username" id="login-username" )
        input( type="password" name="password" placeholder="Password" id="login-password" )
        input( type="submit" name="submit-btn"  class="btn primary-color")
      p.login-form-footer Don't have an account 
        a(href="/registration" class="form-link") Join