header(class='header')
  div(class='header-container')
    span(class='header-logo') evoo
    ul(class='header-auth-btns')

      li
        a(href="/create-event" class="btn-outline-light btn") Create new event
      li
        a(href='/profile/' + user.uId)
          img(class='avatar-img rounded' src=user.photo_url_thumb, alt=user.username)
      li 
        a
          span(class='header-username') #{user.firstname} #{user.lastname}
      li
        a(href='./logout' class='header-auth-btn btn--green') Logout

